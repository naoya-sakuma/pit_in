<div class="container-fluid plan_edit_container">
  <%= form_with(model: @goal, url: monthly_plan_path, local: true) do |goal_form| %>
    <% if @goal.errors.any? %>
      <div id="error_explanation">
        <h2><%= @goal.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @goal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h4 class="title_in_plan_edit">今月の計画</h4>
    <small class="plan_edit_guide">今月取り組む解決案を取組中に変更して更新してください。</small>
    <p class="goal_title_in_edit"><strong><%= @goal.title %></strong></p>
    <div class="row plan_edit_zone">
      <div class="col-10 plan_edit_title">
        <ul class="list-group">
          <% @goal.problems.each do |p| %>
            <% if p.status == t('view.unsolved') %>
              <li class="list-group-item list_head_in_edit"><strong><%= p.title %></strong></li>
              <% p.solutions.each do |so| %>
                <% case so.status %>
                  <% when t('view.holding') %>
                    <li class="list-group-item"><span class="badge badge-danger badge-pill goal_badges"><%= so.status %></span><%= so.title %></li>
                  <% when t('view.working') %>
                    <li class="list-group-item"><span class="badge badge-primary badge-pill goal_badges"><%= so.status %></span><%= so.title %></li>
                  <% when t('view.done') %>
                    <li class="list-group-item"><span class="badge badge-warning badge-pill goal_badges"><%= so.status %></span><%= so.title %></li>
                <% end %>
              <% end %>
            <% end %>
          <% end%>
        </ul>
      </div>

      <div class="col-2 status_edit_form">
        <ul class="list-group">

          <%= goal_form.fields_for :problems do |problem_form| %>
            <% if problem_form.object.status == t('view.unsolved') %>
              <li class="list-group-item status_selectbox list_head_in_edit"><%= problem_form.text_field :status, readonly: :status , class: "form-control-plaintext status_edit_select_box list_head_for_select_box" %></li>
              <%= problem_form.fields_for :solutions do |solution_form| %>
                <%= solution_form.object.title %>
                <li class="list-group-item status_selectbox"><%= solution_form.select :status, [[t('view.holding'), t('view.holding')], [t('view.working'), t('view.working')], [t('view.done'), t('view.done')]], {}, class: "form-control status_edit_select_box" %>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>

  <p class="actions"><%= goal_form.submit t('view.button.update'), class: "btn btn-outline-secondary plan_save" %></p>
  <% end %>
</div>
